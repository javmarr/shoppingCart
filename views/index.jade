extends layout
// Page Content
block content    
  div.container
    div.row
      div.col-lg-12.text-center
        h1 Online Bookstore - Grand Opening!
        
        p(style="color: red") #{error}
        if displayName
          h3 Hello, #{displayName}
          a(href="/logout") Logout
        else 
          h3 Hello, Guest
          //- a(onclick="lock.show(); return false;" id="login") Login
      hr 
      br 
      br 
      br 
      br
      br 
      if (success)
        p(style="color: green")=success
      
      h2 This Week's Featured Items:
      div(class="well carousel")
        each item in items
          div(class="showDetails" id="#{item.id}")
            img(src="#{item.image}" id="#{item.id}" width="300px" height="450px")
            p #{item.name}
      br
      script. 
        $(document).ready( function () {
          $(".carousel").slick({
            infinite: true,
            slidesToShow: 3,
            dots: true,
            slidesToScroll: 3
          });
          
          $(".showDetails").click(function (e) {
            console.log("showing details for: " + e.target.id);
            window.document.location = "item/"+e.target.id;          
          });
          
        });
